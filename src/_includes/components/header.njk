<header class="site-header">
    <div class="container">
        <div class="header-content">
            <h1 class="site-title">
                <a href="{{ '/' | url }}">{{ site.title }}</a>
            </h1>
            <nav class="site-nav">
                <ul class="nav-list">
                    <li><a href="{{ '/' | url }}" {% if page.url == "/" %}class="active"{% endif %}>トップ</a></li>
                    <li><a href="{{ '/archive/' | url }}" {% if page.url == "/archive/" %}class="active"{% endif %}>アーカイブ</a></li>
                    <li><a href="{{ '/feed.xml' | url }}">RSS</a></li>
                </ul>
            </nav>
        </div>
    </div>
</header>